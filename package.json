{
  "name": "tree-sitter-simula",
  "version": "1.0.1",
  "description": "Simula grammar for tree-sitter",
  "main": "index.js",
  "types": "bindings/node",
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "author": "Eirik Sletteberg",
  "license": "MIT",
  "devDependencies": {
    "tree-sitter-cli": "^0.23.0",
    "prebuildify": "^6.0.1"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "tree-sitter": [
    {
      "scope": "source.simula",
      "injection-regex": "^simula$",
      "file-types": [
        "sim"
      ],
      "highlights": "queries/highlights.scm",
      "locals": "queries/locals.scm",
      "injections": "queries/injections.scm",
      "tags": "queries/tags.scm"
    }
  ]
}
